generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(uuid())
  email       String   @unique
  password    String
  name        String
  timezone    String?
  ayanamsa    String?
  createdAt   DateTime @default(now())
  kundalis    Kundali[]
}

model Kundali {
  id          String   @id @default(uuid())
  user        User?    @relation(fields: [userId], references: [id])
  userId      String?
  name        String
  dob         DateTime
  tob         String
  place       String
  chartData   Json
  createdAt   DateTime @default(now())
  reports     Report[]
}

model Report {
  id          String   @id @default(uuid())
  kundali     Kundali  @relation(fields: [kundaliId], references: [id])
  kundaliId   String
  type        String
  pdfUrl      String?
  imageUrl    String?
  createdAt   DateTime @default(now())
}
